# Fleet Management System - Environment Variables Example
# Copy this file to .env and fill in your actual values
# Last Updated: 2025-12-24

# ===========================
# Application Configuration
# ===========================
APP_NAME=FleetManagementSystem
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000
APP_PORT=3000
NODE_ENV=development

# ===========================
# Database Configuration (MySQL)
# ===========================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=fleet_management_system
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===========================
# Redis Configuration
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=3600
REDIS_QUEUE_NAME=fleet_queue

# ===========================
# JWT Authentication
# ===========================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRATION=7d
JWT_ALGORITHM=HS256

# ===========================
# Payment Gateway - Stripe
# ===========================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2024-06-20

# ===========================
# Payment Gateway - PayPal
# ===========================
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_RETURN_URL=http://localhost:3000/payments/paypal/return
PAYPAL_CANCEL_URL=http://localhost:3000/payments/paypal/cancel

# ===========================
# Payment Gateway - Square
# ===========================
SQUARE_APPLICATION_ID=your_square_application_id
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_ENVIRONMENT=sandbox
SQUARE_LOCATION_ID=your_square_location_id

# ===========================
# Email Configuration
# ===========================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM_ADDRESS=noreply@fleetmanagement.com
MAIL_FROM_NAME="Fleet Management System"
MAIL_ENCRYPTION=tls

# Alternative: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@fleetmanagement.com

# ===========================
# SMS Configuration - Twilio
# ===========================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================
# Cloud Storage - AWS S3
# ===========================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=fleet-management-bucket
AWS_URL=https://fleet-management-bucket.s3.amazonaws.com
AWS_ENDPOINT=

# ===========================
# Cloud Storage - Google Cloud
# ===========================
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_KEY_FILE=./config/google-cloud-key.json
GOOGLE_STORAGE_BUCKET=fleet-management-bucket

# ===========================
# Logging Configuration
# ===========================
LOG_LEVEL=debug
LOG_DRIVER=file
LOG_PATH=./logs
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=14

# ===========================
# Session Configuration
# ===========================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ===========================
# CORS Configuration
# ===========================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# ===========================
# Map & Geolocation Services - Google Maps
# ===========================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_MAPS_GEOCODING_API_KEY=your_geocoding_api_key

# ===========================
# Map & Geolocation Services - Mapbox
# ===========================
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token
MAPBOX_STYLE_ID=your_mapbox_style_id

# ===========================
# Real-time Tracking - Socket.io
# ===========================
SOCKET_IO_PORT=3001
SOCKET_IO_CORS_ORIGIN=http://localhost:3000
SOCKET_IO_RECONNECTION_DELAY=1000
SOCKET_IO_RECONNECTION_DELAY_MAX=5000

# ===========================
# GPS Tracking Service
# ===========================
GPS_UPDATE_INTERVAL=30000
GPS_ACCURACY_THRESHOLD=20
GPS_GEOFENCE_ENABLED=true

# ===========================
# Authentication Providers
# ===========================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/auth/microsoft/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# ===========================
# Analytics & Monitoring - Sentry
# ===========================
SENTRY_DSN=your_sentry_dsn_url
SENTRY_ENVIRONMENT=development
SENTRY_TRACE_SAMPLE_RATE=0.1

# ===========================
# Analytics - Google Analytics
# ===========================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ===========================
# Analytics - Datadog
# ===========================
DATADOG_API_KEY=your_datadog_api_key
DATADOG_ENVIRONMENT=development
DATADOG_SERVICE=fleet-management

# ===========================
# File Upload Configuration
# ===========================
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# ===========================
# API Configuration
# ===========================
API_VERSION=v1
API_TIMEOUT=30000
API_PAGINATION_LIMIT=20
API_PAGINATION_DEFAULT=10

# ===========================
# Feature Flags
# ===========================
FEATURE_REAL_TIME_TRACKING=true
FEATURE_MAINTENANCE_ALERTS=true
FEATURE_FUEL_TRACKING=true
FEATURE_EXPENSE_MANAGEMENT=true
FEATURE_DRIVER_BEHAVIOR_MONITORING=true
FEATURE_ROUTE_OPTIMIZATION=true

# ===========================
# Security Configuration
# ===========================
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ===========================
# Two-Factor Authentication (2FA)
# ===========================
TWO_FA_ENABLED=true
TOTP_WINDOW=1
TOTP_TIME_STEP=30

# ===========================
# API Keys Management
# ===========================
API_KEY_EXPIRATION=90d
API_KEY_ROTATION_DAYS=30

# ===========================
# Encryption Configuration
# ===========================
ENCRYPTION_ALGORITHM=aes-256-cbc
ENCRYPTION_KEY=your_32_character_encryption_key

# ===========================
# Database Backup Configuration
# ===========================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3

# ===========================
# Mobile App Configuration
# ===========================
MOBILE_APP_VERSION=1.0.0
MOBILE_MIN_VERSION=1.0.0
MOBILE_FORCE_UPDATE=false
IOS_APP_ID=com.fleetmanagement.ios
ANDROID_APP_ID=com.fleetmanagement.android

# ===========================
# Notification Configuration
# ===========================
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=60000
PUSH_NOTIFICATION_ENABLED=true
EMAIL_NOTIFICATION_ENABLED=true
SMS_NOTIFICATION_ENABLED=true

# ===========================
# Worker/Queue Configuration
# ===========================
QUEUE_DRIVER=redis
QUEUE_CONNECTION=redis
WORKER_PROCESSES=4
JOB_TIMEOUT=3600

# ===========================
# Maintenance Mode
# ===========================
APP_MAINTENANCE_MODE=false
APP_MAINTENANCE_SECRET=maintenance_secret_key

# ===========================
# Third-Party Integrations
# ===========================
# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#fleet-alerts
SLACK_BOT_TOKEN=xoxb-your-bot-token

# ===========================
# Testing Configuration
# ===========================
TEST_DATABASE_URL=sqlite::memory:
TEST_REDIS_URL=redis://localhost:6379/1
